<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMaxPe"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/maxpe_logos" />


        <LinearLayout
            android:id="@+id/llmobLogin"
            android:layout_below="@id/imgMaxPe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_above="@+id/fabSubmit">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your mobile number"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">


                    <com.hbb20.CountryCodePicker
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        app:ccp_countryPreference="IN"
                        app:ccp_showNameCode="false"
                        app:ccp_textSize="20dp"
                        android:gravity="center"/>

               <EditText
                   android:id="@+id/edtmobileno"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:digits="0123456789"
                   android:imeOptions="actionGo"
                   android:maxLength="10"
                   android:text=""
                   android:background="@null"
                   android:inputType="number"
                   android:textColor="@color/black"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center_vertical"
                   android:textColorHint="@color/grey"
                   android:textSize="20sp"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/purple_200"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tvTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearOne3"
                    android:gravity="center"
                    android:text="@string/text"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/linearOne3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/tvTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/terms"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=" and "
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvPrivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/term_privacy"
                        android:textSize="13sp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/fabSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_round"
            android:paddingLeft="20dp"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textSize="18sp">

        </Button>
    </RelativeLayout>
</LinearLayout>