<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/_drawer"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    tools:context=".DashboadActivity">
    <!--android.support.design.widget.BottomNavigationView-->

    <LinearLayout
        android:id="@+id/main_activity_content_id"
        android:layout_width="match_parent"
        android:background="@color/purple_700"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="9.3"
            android:layout_height="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/frag_ContainerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </RelativeLayout>
            </ScrollView>

            <include
                layout="@layout/app_bar_main"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp" />



        </RelativeLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav_view"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_weight="0.7"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/botton_nav_menu" />

    </LinearLayout>

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:scrollbars="none"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:background="@color/purple_200"
                android:layout_height="@dimen/_40sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@color/purple_200"
                android:layout_height="@dimen/_110sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/_mProfileImg"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/default_maxpe_profile"
                        app:civ_border_color="#22adadad"
                        app:civ_border_overlay="false"
                        app:civ_border_width="0dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/_mName"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/p6"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:text=" Shanu Srivastava"
                        android:layout_height="30dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/_mProfile"
                            android:layout_width="wrap_content"
                            android:gravity="center|left"
                            android:fontFamily="@font/p6"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="  View Profile"
                            android:layout_height="30dp"/>
                        <View
                            android:layout_width="6dp"
                            android:visibility="gone"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="10dp"
                            android:background="@color/black"
                            android:gravity="center"
                            android:layout_height="6dp"/>

                        <TextView
                            android:id="@+id/mSetting"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:gravity="center|left"
                            android:fontFamily="@font/p6"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="   Settings"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/_mRank"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center|left"
                    android:fontFamily="@font/p6"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text=" Your Rank"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/_mChain"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:fontFamily="@font/p6"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text=" Your Chain"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/_mMilestone"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:fontFamily="@font/p6"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text=" Your Milestone"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/_mMonthly"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/p6"
                    android:textColor="@color/black"
                    android:text=" Monthly Contest"
                    android:layout_height="30dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/black"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/_mPolicies"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center|left"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/p6"
                    android:textColor="@color/black"
                    android:text=" Policies"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/_mLogout"
                    android:layout_width="match_parent"
                    android:gravity="center|left"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/p6"
                    android:textColor="@color/black"
                    android:text=" LogOut"
                    android:layout_height="30dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
