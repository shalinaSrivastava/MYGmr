<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".dashboad.lostfound.LostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/_lostback"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:src="@drawable/ic_arrow_back_24"
            android:padding="@dimen/_12sdp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/_losttitleTv"
            android:layout_width="0dp"
            android:text="Lost "
            android:fontFamily="@font/p6"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_16sdp"
            android:gravity="center|left"
            android:layout_weight="9"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp">


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_marginStart="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_170sdp"
        android:layout_height="50dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/_lostList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15sdp" />
  <LinearLayout
      android:id="@+id/noDataLost"
      android:layout_width="match_parent"
      android:layout_weight="9"
      android:layout_height="0dp">
      <TextView

          android:text="There is no lost Data"
          android:background="@drawable/bg_green"
          android:layout_margin="@dimen/_15sdp"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_width="match_parent"
          android:textColor="@color/purple_200"
          android:layout_height="@dimen/_50sdp"/>

  </LinearLayout>
    </RelativeLayout>

</LinearLayout>