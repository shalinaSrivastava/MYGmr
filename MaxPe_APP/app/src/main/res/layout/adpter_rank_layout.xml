<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_35sdp">

        <LinearLayout
            android:id="@+id/_rank_lay"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/_adptR_rank_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/p6"
                android:padding="@dimen/_3sdp"
                android:text="fijmij "
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:id="@+id/_adptR_name_tv"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Name "
                android:fontFamily="@font/p6"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/_adptR_amount"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="Amount  "
                android:fontFamily="@font/p6"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <View
        android:layout_below="@+id/_rank_lay"
        android:layout_width="match_parent"
        android:background="@color/purple_200"
        android:layout_height="@dimen/_1sdp"></View>

</RelativeLayout>