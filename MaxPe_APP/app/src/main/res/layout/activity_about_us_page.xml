<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.AboutUsPage"
    android:filterTouchesWhenObscured="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imgBackAbout"
            android:layout_width="28dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_24"/>

        <TextView
            android:text="About Us"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="MaxPe App"
                    android:textColor="#696969"
                    android:textSize="32sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="90dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="18dp"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:text="Version"
                    android:textColor="#ddadadad"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/app_version"
                    android:textColor="#696969"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Last Updated"
                    android:textColor="#ddadadad"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="November 2019"
                    android:textColor="#696969"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="MaxPe is an e-wallet application provided by Ecomaxgo, as part of the Swachh Bharat initiative of the Government of India. Maxpe is an all-solution app  for Indians (starting with those living in New Delhi) to deal with Commuting, entertainment, parking, bill payments, recharges, air travel, railway tickets, banking phone connections, free wifi 24/7 at an attractive speed - all handy within a few clicks."
                    android:textColor="#808080"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Term of Services"
                    android:textColor="#696969"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:id="@+id/tvTermsService"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>