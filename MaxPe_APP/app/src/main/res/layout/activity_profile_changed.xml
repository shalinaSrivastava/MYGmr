<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileChangedActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp">
        <RelativeLayout android:layout_width="match_parent"
            android:background="@color/tw__light_gray"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/default_maxpe_profile"
                app:civ_border_color="#22adadad"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <ImageView
                android:id="@+id/imgAddProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgUserProfile"
                android:layout_marginLeft="-54dp"
                android:layout_marginTop="-52dp"
                android:layout_toRightOf="@id/imgUserProfile"
                android:background="@drawable/add_image_bg"
                android:padding="10dp"
                android:src="@drawable/ic_pencil_edit_button"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/_fCategory"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:background="@drawable/bg_green"
                android:hint="Category"
                android:imeOptions="actionDone"
                android:padding="@dimen/_10sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_12sdp"
                android:gravity="center"
                android:background="@color/white"
                android:textStyle="bold"
                android:text="Full Name"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>