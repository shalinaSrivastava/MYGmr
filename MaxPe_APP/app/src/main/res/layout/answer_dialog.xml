<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffcd38"
    android:orientation="vertical"
    android:id="@+id/linearOne">

    <ImageView
        android:id="@+id/imgCloseQuizDialog"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:elevation="4dp"
        android:layout_gravity="right"
        android:padding="@dimen/eightdp"
        android:layout_height="45dp" />

    <RelativeLayout
        android:id="@+id/relativeOne"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/aa"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="62dp"
            android:src="@drawable/personicon" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeTwo"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:translationY="-10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvWelcomeMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="12dp"
                android:gravity="center_horizontal"
                android:text="Rakesh Kumar"
                android:textColor="#1C1D1C"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvWinAmountQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWelcomeMsg"
                android:drawablePadding="12dp"
                android:gravity="center_horizontal"
                android:text="â‚¹ 300"
                android:textColor="#1C1D1C"
                android:textSize="34sp"
                android:textStyle="bold" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeThree"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:translationY="-10dp">

        <TextView
            android:id="@+id/tvAnswerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#DF0D0D"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/tvQuizTryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:textStyle="normal"
            android:padding="5dp"
            android:layout_below="@+id/tvAnswerText"
            android:textColor="#797575"
            android:drawablePadding="12dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvQuiztryHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="normal"
            android:padding="4dp"
            android:layout_below="@+id/tvQuizTryText"
            android:text="Hint :- Try to answer first to win this Quiz"
            android:textSize="12sp"/>

    </RelativeLayout>


</LinearLayout>