<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="Make chain "
            android:fontFamily="@font/p6"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Introduce your friends to all the benefits"
            android:fontFamily="@font/p6"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:background="@color/background_white"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="My Chain "
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Chain "
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Spent "
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="earned "
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/_fregChain_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/_fregChain_share_lay"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:background="@color/purple_200"
            android:layout_height="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/p6"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Make Chain "
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:text="and earn 2Rs per chain"
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>