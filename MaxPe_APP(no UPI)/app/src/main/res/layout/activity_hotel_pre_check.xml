<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".travel.HotelPreCheck">
    <RelativeLayout
        android:id="@+id/_hD_lay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/_hD_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back_24" />

        <TextView
            android:id="@+id/_hD_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/_hD_back"
            android:fontFamily="@font/p6"
            android:gravity="center|left"
            android:padding="@dimen/_3sdp"
            android:text=" Kasmiri get to Panchkula "
            android:textColor="@color/black"
            android:textSize="15dp" />


    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/preCheck_list"
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/noResult"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Oops! No results found for your search\n We Suggest you to modify your search"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/_ContainerView"
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/stroke_green"
        android:weightSum="2"
        android:layout_height="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/_back"
            android:fontFamily="@font/p6"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Rs  257878"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_booking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/_back"
            android:background="@color/purple_200"
            android:fontFamily="@font/p6"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Countinue Booking"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>