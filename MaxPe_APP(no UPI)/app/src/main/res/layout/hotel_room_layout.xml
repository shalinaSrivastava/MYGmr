<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/_htoolbar_lay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/_h_back"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:src="@drawable/ic_arrow_back_24"
            android:padding="@dimen/_12sdp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/_search_et_citylay"
            android:layout_width="0dp"
             android:text="Add Room and Guest"
            android:backgroundTint="@color/transparent"
            android:fontFamily="@font/p6"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center|left"
            android:layout_weight="9"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/room_lay"
        android:background="@drawable/stroke_gray"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 1"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/color_gray" />

        <TextView
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="30dp"
            android:background="@color/background_white"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Guest"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="13dp" />
        <LinearLayout
            android:id="@+id/noRoom_lay"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:backgroundTint="@color/transparent"
                android:text="Adult"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_baseline_add_circle_24"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:backgroundTint="@color/transparent"
                android:text="1"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_baseline_remove_circle_24"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:backgroundTint="@color/transparent"
                android:text="Children"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_baseline_add_circle_24"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:backgroundTint="@color/transparent"
                android:text="1"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_baseline_remove_circle_24"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="45dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:backgroundTint="@color/transparent"
                android:text="Child 1 Age"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@drawable/stroke_gray"
                android:layout_height="match_parent">
             <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:backgroundTint="@color/transparent"
                android:text="   1"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="3dp"
                android:tint="@color/black"
                android:src="@drawable/ccp_ic_arrow_drop_down"
                android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/color_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="45dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:backgroundTint="@color/transparent"
                android:text="Child 1 Age"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:background="@drawable/stroke_gray"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:gravity="center|left"
                    android:backgroundTint="@color/transparent"
                    android:text="   1"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:tint="@color/black"
                    android:src="@drawable/ccp_ic_arrow_drop_down"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="3"
        android:padding="5dp"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:backgroundTint="@color/transparent"
            android:text="Add Room"
            android:padding="4dp"
            android:textColor="@color/blue"
            android:textSize="15dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:backgroundTint="@color/transparent"
            android:text="Remove Room"
            android:padding="4dp"
            android:textColor="@color/blue"
            android:textSize="15dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:backgroundTint="@color/transparent"
            android:text="Done"
            android:padding="4dp"
            android:textColor="@color/blue"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>