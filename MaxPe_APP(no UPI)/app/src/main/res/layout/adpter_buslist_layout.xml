<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/_busCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="match_parent"
                android:background="@color/white">


                <TextView
                    android:id="@+id/_busName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="j"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_busRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_green"
                    android:padding="10dp"
                    android:text="4.5/5"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/_busType"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_busName"
                    android:text="5 type seater"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/_bTimeLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_busType"
                    android:layout_marginTop="7dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/_bStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20:20pm"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/color_gray" />

                    <TextView
                        android:id="@+id/_bTotaleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="18h 55m"
                        android:textColor="@color/color_gray"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/color_gray" />

                    <TextView
                        android:id="@+id/_bEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="01:30am"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_busRating"
                    android:layout_marginTop="30dp"
                    android:layout_toLeftOf="@+id/_bAmount"
                    android:text="@string/Rs"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/_bAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_busRating"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="30dp"
                    android:paddingRight="10dp"
                    android:text="75,098"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/_bSeats"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/_bTimeLay"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:text="32 seats left"
                    android:textColor="@color/color_gray"
                    android:textSize="11dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/_bSeats"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_gray" />

                <TextView
                    android:id="@+id/_bTracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_bSeats"
                    android:layout_marginTop="10dp"
                    android:text="Live Tracking"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>