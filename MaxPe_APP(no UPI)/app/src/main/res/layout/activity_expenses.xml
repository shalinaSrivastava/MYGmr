<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".expenses.ExpensesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_profileUser"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:src="@drawable/default_maxpe_profile"
                    app:civ_border_color="#22adadad"
                    app:civ_border_overlay="false"
                    app:civ_border_width="0dp" />

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_toLeftOf="@+id/amount"
                    android:src="@drawable/maxpe_logo" />




                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/home_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tvDateTime"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="8dp"
                    android:text="xxxx xxxx xxxx xxxx"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="xx/xx"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toLeftOf="@+id/amount"
                    android:text="@string/Rs"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/tvDateTime"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:paddingRight="10dp"
                    android:text="_"
                    android:textColor="@color/black"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/db_userName_tv"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="2"
        android:padding="@dimen/_5sdp"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="  Goal "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="@dimen/_3sdp"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="See all "
            android:fontFamily="@font/p6"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="13dp"
            android:gravity="center|right"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llTransHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:foreground="@drawable/green_ripple"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/expen_chart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/tvService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/expen_chart"
                android:text="Travel "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_toRightOf="@+id/expen_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rs"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:layout_below="@+id/tvService"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="758"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tvService"
                android:layout_toRightOf="@+id/tvAccount"
                android:singleLine="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="87%"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>