<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".dashboad.lostfound.FoundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/_fback"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:src="@drawable/ic_arrow_back_24"
            android:padding="@dimen/_12sdp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/_titleTv"
            android:layout_width="0dp"
            android:text="Found"
            android:fontFamily="@font/p6"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center|left"
            android:layout_weight="9"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/_fdetail"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_height="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_weight="9.3"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/_outLine"
            android:layout_width="@dimen/_140sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_110sdp">

            <ImageView
                android:id="@+id/_fCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/stroke_green"
                android:padding="@dimen/_5sdp"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />
        <ImageView
            android:id="@+id/_fImgAdd"
            android:src="@drawable/ic_pencil_edit_button"
            android:layout_below="@id/_fCamera"
            android:layout_toRightOf="@id/_fCamera"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="-39dp"
            android:background="@drawable/add_image_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Category"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/_fCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/stroke_green"
                android:hint="Category"
                android:imeOptions="actionDone"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            <ImageView

                android:src="@drawable/ccp_ic_arrow_drop_down"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:tint="@color/purple_200" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Title"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/_fItem"
            android:layout_width="match_parent"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/stroke_green"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textStyle="bold"
            android:hint="Title"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_7sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Location"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/_fLocation"
            android:layout_width="match_parent"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/stroke_green"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textStyle="bold"
            android:hint="Location"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_7sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Date"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/_fDate"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/stroke_green"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textStyle="bold"
            android:hint="Date"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_7sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Contact Person Name"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/_fName"
            android:layout_width="match_parent"
            android:textSize="@dimen/_10sdp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:background="@drawable/stroke_green"
            android:textStyle="bold"
            android:hint="Contact Person Name"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_7sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Contact Person Mobile"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/_fContactNo"
            android:layout_width="match_parent"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/stroke_green"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textStyle="bold"
            android:hint="Contact Person Mobile"
            android:textColor="@color/black"
            android:text=""
            android:inputType="phone"
            android:maxLength="10"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_7sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Description"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center|left"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/_fDescription"
            android:layout_width="match_parent"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/stroke_green"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textStyle="bold"
            android:hint="Description"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginLeft="@dimen/_15sdp"
            android:padding="@dimen/_7sdp"
            android:layout_height="@dimen/_60sdp"/>
    </LinearLayout>
        <TextView
            android:id="@+id/_Fsubmit"
            android:layout_width="match_parent"
            android:text="Submit"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:fontFamily="@font/p6"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_weight="0.7"
            android:layout_height="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/_fPost"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="9"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:foreground="@drawable/stroke_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/_Fphoto"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/_delhi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_weight="5"
                                android:text="Category :"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/_Fcategory"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="5"
                                android:text="abcd "
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_weight="5"
                                android:text="Item :"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/_Fitem"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="5"
                                android:text="abcd "
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_weight="5"
                                android:text="Location:"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/_Flocation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="5"
                                android:text="Delhi"
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_weight="5"
                                android:text="Date :"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/_Fdate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="5"
                                android:text="23june "
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_weight="5"
                                android:text="Contact Person Name :"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/_Fname"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="5"
                                android:text="Shalina Srivastava "
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_weight="5"
                                android:text="Contact Person Number :"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/_Fnumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="5"
                                android:text="0987654321 "
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_weight="5"
                                android:text="Description :"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/_Fdescrip"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="5"
                                android:text="hey ........"
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>