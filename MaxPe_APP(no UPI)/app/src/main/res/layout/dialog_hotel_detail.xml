<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/_hD_lay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/_hD_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back_24" />

        <TextView
            android:id="@+id/_hD_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/_hD_back"
            android:fontFamily="@font/p6"
            android:gravity="center|left"
            android:padding="@dimen/_3sdp"
            android:text="Delhi"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/_hDPhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/_busCardView"
            android:layout_width="match_parent"
            android:layout_marginTop="130dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="150dp">
                <RatingBar
                    android:id="@+id/_hD_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="-26dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:stepSize="0.1"
                    android:theme="@style/RatingBar"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />
                _hD_title,_hD_Name,_hD_Location

                <TextView
                    android:id="@+id/_hD_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_hD_rating"
                    android:text="Hotel Name"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/_hD_Name"
                    android:src="@drawable/ic_outline_location_on_24" />

                <TextView
                    android:id="@+id/_hD_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_hD_Name"
                    android:layout_marginLeft="18dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/_hd_cancelation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_hD_Location"
                    android:layout_marginTop="4dp"
                    android:text="Cancellation Charges Apply"
                    android:textColor="@color/green"
                    android:textSize="11dp" />
                _hd_cancelation,_hD_highLights
                <TextView
                    android:id="@+id/_hD_highLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_hd_cancelation"
                    android:layout_marginTop="5dp"
                    android:text="Cancellation Charges Apply"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/_hDPhoto"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="2"
             android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/stroke_green"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="CHECK-IN DATE"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/_hcal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/_hd_checkIn_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/_hcal"
                        android:gravity="center|left"
                        android:padding="4dp"
                        android:text="27"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/_hd_checkIn_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_hd_checkIn_date"
                        android:layout_marginLeft="35dp"
                        android:gravity="center|left"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="7dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/stroke_green"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="CHECK-OUT DATE"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/_hcal_out"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/_hd_Date_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/_hcal_out"
                        android:gravity="center|left"
                        android:padding="4dp"
                        android:text="27"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/_hd_checkOut_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_hd_Date_out"
                        android:layout_marginLeft="35dp"
                        android:gravity="center|left"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Meal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="the hotel includes a restaurant and a dining room."
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Room Type"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_roomType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="Air conditioning"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="Booking Policy"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_BookingPolicy"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="Cash Back"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_cashBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="Latitude"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="Discount"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="BookingPolicy"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/stroke_green"
        android:weightSum="2"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/_hd_totalPrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/_back"
            android:fontFamily="@font/p6"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Rs  257878"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_hD_proceed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/_back"
            android:background="@color/purple_200"
            android:fontFamily="@font/p6"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="PROCEED"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>