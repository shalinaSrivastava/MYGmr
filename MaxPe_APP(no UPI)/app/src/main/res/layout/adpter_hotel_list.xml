<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/_busCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="8dp"
                    android:padding="10dp" >
                    <ImageView
                        android:id="@+id/_hPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/_hName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="Hotel Name"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/_hName"
                    android:padding="2dp"
                    android:src="@drawable/ic_outline_location_on_24" />

                <TextView
                    android:id="@+id/_hLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_hName"
                    android:layout_marginLeft="20dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:layout_below="@+id/_hLocation"
                    android:theme="@style/RatingBar"
                    android:rating="3.5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:isIndicator="true"/>


                <TextView
                    android:id="@+id/_hHighlights"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@+id/_hLocation"
                    android:layout_marginTop="30dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_hHighlights"
                    android:layout_marginTop="20dp"
                    android:text="Cancellation Charges Apply"
                    android:textColor="@color/color_gray"
                    android:textSize="11dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/_h"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_h"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/Rs"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/_hAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_h"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="5,789"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_h"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/_hAmount"
                    android:text="/ Night"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/disc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_h"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_toLeftOf="@+id/_hDiscount"
                    android:padding="7dp"
                    android:text="Discount ="
                    android:textColor="@color/red"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/_hDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_below="@+id/_h"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:text="0 %"
                    android:textColor="@color/red"
                    android:padding="7dp"
                    android:textSize="13dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>