<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/_UserDetail_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:background="@color/white">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Travler Detail"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/_bTimeLay"
                    android:layout_width="200dp"
                    android:padding="1dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/stroke_blue"
                    android:layout_below="@+id/_userName"
                    android:weightSum="3"
                    android:layout_marginTop="12dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/_gMr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="Mr."
                        android:textColor="@color/blue"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <TextView
                        android:id="@+id/_gMrs"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="Mrs"
                        android:textColor="@color/blue"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <TextView
                        android:id="@+id/_gMiss"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="Miss"
                        android:textColor="@color/blue"
                        android:textSize="12dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/_idProofType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:background="@drawable/stroke_gray"
                        android:hint="Id Proof Type"
                        android:imeOptions="actionDone"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp"/>
                    <ImageView

                        android:src="@drawable/ccp_ic_arrow_drop_down"
                        android:visibility="visible"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:tint="@color/color_gray" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_gray"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:hint="First Name"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>
                <EditText
                    android:id="@+id/_userLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_gray"
                    android:layout_marginTop="10dp"
                    android:padding="7dp"
                    android:text=""
                    android:hint="Last Name"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <EditText
                    android:id="@+id/_userContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@drawable/stroke_gray"
                    android:layout_marginTop="10dp"
                    android:maxLength="10"
                    android:hint="contact number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/_userAge"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_gray"
                    android:layout_marginTop="10dp"
                    android:hint="Age"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>