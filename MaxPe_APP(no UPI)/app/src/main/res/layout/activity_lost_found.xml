<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboad.lostfound.LostFoundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/_back_lf"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:src="@drawable/ic_arrow_back_24"
            android:padding="@dimen/_12sdp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/_titleTv"
            android:layout_width="0dp"
            android:text="Lost and Found"
            android:fontFamily="@font/p6"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_18sdp"
            android:gravity="center|left"
            android:layout_weight="9"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/search_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_85sdp"
                android:layout_weight="9"
                android:fontFamily="@font/p6"
                android:gravity="center|left"
                android:padding="@dimen/_3sdp"
                android:text="Help yourself and others"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/box_green" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_weight="8"
        android:layout_height="0dp">


        <TextView
            android:id="@+id/_lost_tv"
            android:layout_width="@dimen/_150sdp"
            android:text="I lost"
            android:layout_marginTop="@dimen/_50sdp"
            android:fontFamily="@font/p6"
            android:background="@color/purple_200"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_height="@dimen/_40sdp"/>
        <TextView
            android:id="@+id/_found_tv"
            android:layout_width="@dimen/_150sdp"
            android:text="I found"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/p6"
            android:background="@color/purple_200"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_height="@dimen/_40sdp"/>
        <TextView
            android:id="@+id/_myPost_tv"
            android:layout_width="@dimen/_150sdp"
            android:text="My Post"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            android:fontFamily="@font/p6"
            android:background="@color/purple_200"
            android:textColor="@color/black"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_height="@dimen/_40sdp"/>

    </LinearLayout>

</LinearLayout>