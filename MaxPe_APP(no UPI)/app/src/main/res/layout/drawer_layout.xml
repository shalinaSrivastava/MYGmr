<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/purple_700"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:background="@color/purple_200"
            android:layout_height="@dimen/_40sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:layout_height="@dimen/_110sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_maxpe_profile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/mName"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:fontFamily="@font/p6"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text=" Shanu Srivastava"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mProfile"
                        android:layout_width="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="@font/p6"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="  View Profile"
                        android:layout_height="30dp"/>
                    <View
                        android:layout_width="6dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:layout_height="6dp"/>

                    <TextView
                        android:id="@+id/mSetting"
                        android:layout_width="match_parent"
                        android:gravity="center|left"
                        android:fontFamily="@font/p6"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="   Settings"
                        android:layout_height="30dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mRank"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center|left"
                android:fontFamily="@font/p6"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text=" Your Rank"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/mChain"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:fontFamily="@font/p6"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text=" Your Chain"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/mMilestone"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:fontFamily="@font/p6"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text=" Your Milestone"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/mMonthly"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:text=" Monthly Contest"
                android:layout_height="30dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/mPolicies"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center|left"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:text=" Policies"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/mLogout"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/p6"
                android:textColor="@color/black"
                android:text=" LogOut"
                android:layout_height="30dp"/>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>