<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/_busCardView"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/_hD_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/_hD_Name"
                android:src="@drawable/ic_outline_location_on_24" />

            <TextView
                android:id="@+id/_hD_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_hD_Name"
                android:layout_marginLeft="18dp"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/_cancelation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_hD_Location"
                android:layout_marginTop="10dp"
                android:text="Cancellation Charges Apply"
                android:textColor="@color/green"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/checkIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_cancelation"
                android:gravity="center|left"
                android:padding="4dp"
                android:text="CHECK-IN DATE"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/_checkInDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkIn"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:padding="4dp"
                android:text="27"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/_checkOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_checkInDate"
                android:gravity="center|left"
                android:padding="4dp"
                android:text="CHECK-OUT DATE"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/_checkOutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_checkOut"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:padding="4dp"
                android:text="27"
                android:textColor="@color/black"
                android:textSize="11dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/_hDPhoto"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Meal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="Meal"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Room Type"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_roomType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="roomType"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginTop="10dp"
            android:text="Booking Policy"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/_hD_BookingPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="BookingPolicy"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>