<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:filterTouchesWhenObscured="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCloseQuizDialog"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:elevation="4dp"
            android:padding="@dimen/eightdp"
            android:layout_height="45dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cvQuizAnsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardCornerRadius="14dp">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@color/purple_200">

                <ImageView
                    android:id="@+id/ImgQuizAnsd"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_succes_checked"/>

                <TextView
                    android:id="@+id/tvAnswerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#DF0D0D"
                    android:textSize="28sp"/>

                <TextView
                    android:id="@+id/tvQuizTryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:textColor="#797575"
                    android:drawablePadding="12dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvQuiztryHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:textStyle="normal"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:text="Hint :- Try to answer first to win this Quiz"
                    android:textColor="#979494"
                    android:textSize="12sp"/>

                <!--<com.facebook.share.widget.ShareButton
                        android:id="@+id/fbShareContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>-->

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>